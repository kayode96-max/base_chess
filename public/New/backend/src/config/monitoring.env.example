# Chainhook Node Configuration
CHAINHOOK_NODE_URL=http://localhost:20456

# Health Check Configuration (in milliseconds)
CHAINHOOK_HEALTH_CHECK_INTERVAL=30000

# Metrics Collection Interval (in milliseconds)
CHAINHOOK_METRICS_INTERVAL=60000

# Event Log Retention (in days)
CHAINHOOK_LOG_RETENTION_DAYS=30

# Alert Thresholds
# Performance threshold in milliseconds - alerts when processing time exceeds this
CHAINHOOK_PERF_THRESHOLD=5000

# Failure rate threshold in percentage (0-100)
# Alerts when failure rate exceeds this percentage
CHAINHOOK_FAILURE_RATE_THRESHOLD=10

# Maximum consecutive failed health checks before critical alert
CHAINHOOK_MAX_CONSECUTIVE_FAILURES=5

# Stacks Network (mainnet, testnet, devnet)
STACKS_NETWORK=devnet

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/passportx

# API Configuration
API_PORT=3010
API_HOST=localhost

# JWT Secret for API authentication
JWT_SECRET=your-secret-key-here

# Monitoring Dashboard URL
MONITORING_DASHBOARD_URL=http://localhost:3000/monitoring
