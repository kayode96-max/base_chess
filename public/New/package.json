    "@stacks/transactions": "^6.0.0",
    "@walletconnect/core": "^2.23.1",
    "@walletconnect/utils": "^2.23.1",
    "axios": "^1.13.2",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "eth-sig-util": "^3.0.1",
    "lucide-react": "^0.300.0",
    "next": "^14.0.0",
