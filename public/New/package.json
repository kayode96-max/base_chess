{
  "name": "passportx",
  "version": "1.0.0",
  "description": "PassportX Achievement Passport",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "prepare": "husky install",
    "test": "npm run test:unit && npm run test:contracts",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:contracts": "clarinet test",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:all": "npm run lint && npm run test:coverage && npm run test:e2e",
    "test:chainhook": "npx tsx scripts/test-chainhook-config.ts",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "quality:check": "sonar-scanner",
    "analyze": "source-map-explorer '.next/static/**/*.js' --html > bundle-analysis.html && open bundle-analysis.html",
    "analyze:size": "next-bundle-analyzer"
  },
  "dependencies": {
    "@stacks/connect": "^7.0.0",
    "@stacks/network": "^6.0.0",
